
@{
    ViewBag.Title = "index";
}

<html>
<body>

    <div class="table-responsive" id="contentPage" style="display:none;">

        <table class="table table-bordered table-hover" id="dataTable" style="width:100%;" cellspacing="0">

            <thead>
                <tr id="columnsHeader">
                    <th class="none">#</th>
                    <th><span resourceID="resUMSTableColumnName">Name</span></th>
                    <th><span resourceID="resUMSTableColumnPassword">Password</span></th>
                    <th><span resourceID="resUMSTableColumnDefaultPosition">Default Position</span></th>
                    <th><span resourceID="resUMSTableColumnNote">Note</span></th>
                    <th><span resourceID="resUMSTableColumnLastLogin">Last Login</span></th>
                    <th><span resourceID="resUMSTableColumnBlocked">Blocked</span></th>
                    <th><span resourceID="resUMSTableColumnActions">Actions</span></th>
                </tr>
            </thead>
            <thead class="filters">
                <tr>
                    <td><input type="checkbox" id="checkboxall" onchange="changeCheckBoxAll()" style="width:20px; height:20px; text-align:center;" /></td>
                    <td><span class="filter">Name</span></td>
                    <td><span class="filter" resourceID="resUMSTableColumnPassword">Password</span></td>
                    <td><span class="filter" resourceID="resUMSTableColumnDefaultPosition">Default Position</span></td>
                    <td><span class="filter" resourceID="resUMSTableColumnNote">Note</span></td>
                    <td><span class="filter" resourceID="resUMSTableColumnLastLogin">Last Login</span></td>
                    <td><span class="filter" resourceID="resUMSTableColumnBlocked">Blocked</span></td>
                    <td style="text-align:center;">#</td>
                </tr>
            </thead>
            <tbody></tbody>

            @*<tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                    </tr>
                </tfoot>*@
        </table>
 
    </div>



    <!-- New Item Modal-->
    <div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="newItemModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newItemModalLabel"><span resourceID="resUMSCreateNewItemButtonTitle">Create New Item</span></h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Address</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Address 2</label>
                            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">City</label>
                                <input type="text" class="form-control" id="inputCity">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputState">State</label>
                                <select id="inputState" class="form-control">
                                    <option selected>Choose...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="inputZip">Zip</label>
                                <input type="text" class="form-control" id="inputZip">
                            </div>
                        </div>
               
                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal"><span resourceID="resUMSCancelButtonTitle">Cancel</span></button>
                    <a class="btn btn-secondary" href="#"><span resourceID="resUMSCreateButtonTitle">Create</span></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="@Url.Content("~/Scripts/core/user_index.js")"></script>
}